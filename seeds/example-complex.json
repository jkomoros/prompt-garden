{
    "version": 0,
    "seeds": {
        "name-limerick":{
            "type": "prompt",
            "prompt": {
                "type": "render",
                "template": "Write a limerick about a person named {{name}}, where {{name}} is used as a rhyme.",
                "vars": {
                    "type": "object",
                    "properties": {
                        "name": {
                            "id": "prompt-name"
                        }
                    }
                }
            }
        },
        "prompt-name": {
            "type": "let-multi",
            "values": {
                "type": "object",
                "properties": {
                    "komoroske.com:user_first_name": {
                        "type": "retrieve",
                        "key": "user_first_name"
                    },
                    "store": "komoroske.com"
                }
            },
            "block": {
                "type": "if",
                "test": {
                    "type": "==",
                    "a": {
                        "type": "var",
                        "name": "komoroske.com:user_first_name"
                    },
                    "b": null
                },
                "then": {
                    "type": "let",
                    "name": "komoroske.com:user_first_name",
                    "value": {
                        "type": "input",
                        "question": "What name should I call you?",
                        "default": "Bob"
                    },
                    "block": {
                        "type": "array",
                        "return": "last",
                        "items": [
                            {
                                "type": "log",
                                "value": {
                                    "type": "render",
                                    "template": "OK, I'll call you {{name}} from now on.",
                                    "vars": {
                                        "type": "object",
                                        "properties": {
                                            "name": {
                                                "type": "var",
                                                "name": "komoroske.com:user_first_name"
                                            }
                                        }
                                    }
                                }
                            },
                            {
                                "type": "store",
                                "key": "user_first_name",
                                "value": {
                                    "type": "var",
                                    "name": "komoroske.com:user_first_name"
                                }
                            }
                        ]
                    }
                },
                "else": {
                    "type": "var",
                    "name": "komoroske.com:user_first_name"
                }
            }
        }
    }
}