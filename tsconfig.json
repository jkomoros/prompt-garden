{
    "compilerOptions": {
        "target": "es2019",
        "module": "ESNext",
        "lib": [
            "es2020",
            "DOM",
            "DOM.Iterable"
        ],
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "inlineSources": true,
        "strict": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "nodenext",
        "rootDir": ".",
    },
    "include": [
        "src/**/*.ts",
        "tools/**/*.ts",
        "test/**/*.ts",
        "app/**/*.ts"
    ]
}